<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorButtonNormal"
    tools:context=".controller.HistoryActivity">

    <TextView
        android:id="@+id/comment_test_preferences"
        android:layout_width="306dp"
        android:layout_height="80.7dp"
        android:background="@color/light_sage"
        android:text="TextView"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginEnd="80.7dp"
        tools:layout_marginStart="0dp" />

    <ImageButton
        android:id="@+id/comment_toast_imageButton_history"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_comment_black_48px" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="80.7dp"
        android:background="@color/banana_yellow"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_test_preferences" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="230dp"
        android:layout_height="80.7dp"
        android:layout_marginEnd="152dp"
        android:background="@color/cornflower_blue_65"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="154dp"
        android:layout_height="80.7dp "
        android:background="@color/warm_grey"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_marginEnd="154dp"
        tools:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="78dp"
        android:layout_height="80.7dp"
        android:background="@color/faded_red"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="154dp"
        android:layout_height="80.7dp"
        android:layout_marginEnd="228dp"
        android:background="@color/warm_grey"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="80.7dp"
        android:background="@color/banana_yellow"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</android.support.constraint.ConstraintLayout>